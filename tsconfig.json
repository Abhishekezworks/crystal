{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,

    "moduleResolution": "node",

    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true,

    // Use eslint for these "lint"-y checks
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "exclude": ["node_modules", "dist", ".yarn"],
  "include": [],
  "references": [
    { "path": "packages/graphile-build" },
    { "path": "packages/graphile-build-pg" },
    { "path": "packages/graphile-utils" },
    { "path": "packages/graphql-parse-resolve-info" },
    { "path": "packages/jest-serializer-graphql-schema" },
    { "path": "packages/lds" },
    { "path": "packages/lru" },
    { "path": "packages/pg-sql2" },
    { "path": "packages/postgraphile-core" },
    { "path": "packages/postgraphile" },
    { "path": "packages/subscriptions-lds" },
    { "path": "packages/pg-pubsub" },
    { "path": "packages/graphile-crystal" },
    { "path": "packages/dataplan-pg" }
  ]
}
