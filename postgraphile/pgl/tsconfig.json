// This includes `noEmit` and `include: ["."]` so that `graphile.config.ts` works with moduleResolution: "nodenext".
// See tsconfig.build.json for the build version.
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noEmit": true,

    "noUncheckedIndexedAccess": false,
    "moduleResolution": "nodenext",
    "module": "nodenext"
  },
  "include": ["."],
  "exclude": ["__tests__", "dist"]
}
